{% extends 'base.html.twig' %}

{% block title %}Listado de proveedores{% endblock %}

{% block body %}
    <br><h1>Listado de proveedores</h1><br>
    {% include 'commons/_notifications.html.twig' %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Correo electrónico</th>
            <th scope="col">Número de teléfono</th>
            <th scope="col">Tipo</th>
            <th scope="col">Activo</th>
            <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for index, vendor in vendors %}
            <tr>
                <th scope="row">{{ index + 1 }}</th>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.email }}</td>
                <td>{{ vendor.phone}}</td>
                <td>{{ vendor.type }}</td>
                <td> {% if vendor.active %}Sí{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('app_edit_vendor', {'id': vendor.id}) }}">Editar</a>
                    <a href="{{ path('app_delete_vendor', {'id': vendor.id}) }}">Eliminar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="3" scope="row">No se han encontrado resultados</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}



